# Configuración de la base de datos
DB_CONNECTION=pgsql # o mysql, u otro sistema de base de datos
DB_HOST=localhost
DB_PORT=5432  # Puerto por defecto de PostgreSQL, 3306 para MySQL
DB_DATABASE=webseguridad
DB_USERNAME=postgres
DB_PASSWORD=1212

# Otras variables de entorno de la aplicación
APP_NAME="Mi Aplicación Webseguridad"
APP_ENV=development # o production, testing, etc.
APP_KEY=UnaClaveSecretaUnica # Generar con un comando de tu framework (e.g., `php artisan key:generate` en Laravel)
APP_DEBUG=true # o false en producción
APP_URL=http://localhost:3000 # o tu dominio

# Configuración de correo (si usas envío de correos)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=tu_correo@example.com
MAIL_PASSWORD=tu_contraseña_de_correo
MAIL_ENCRYPTION=tls

# Configuración de recuperación de contraseña (si aplica)
# Estas son solo preguntas de ejemplo.  NO guardes las respuestas aquí en texto plano.
# Las respuestas DEBEN ser hasheadas antes de guardarse en la base de datos.
PREGUNTA_RECUPERACION1="Nombre de un Familiar Querido"
PREGUNTA_RECUPERACION2="Nombre de tu Mejor Amigo"
